<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_white_bg"
        android:padding="@dimen/size10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/test"/>

    </FrameLayout>

    <in.fine.artist.home.utils.views.TextViewMedium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_to_access_skill_level"
        android:gravity="center"
        android:textSize="@dimen/size24"
        android:padding="@dimen/size20"
        android:textColor="@color/white"/>

    <include
        android:id="@+id/right_tick_container"
        android:layout_width="@dimen/height100"
        android:layout_height="@dimen/height100"
        android:layout_marginTop="@dimen/size32"
        layout="@layout/layout_right_arrow" />

</LinearLayout>