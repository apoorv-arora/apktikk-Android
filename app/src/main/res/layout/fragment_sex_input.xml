<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <in.fine.artist.home.utils.views.TextViewMedium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/are_you_a"
        android:textSize="@dimen/size24"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size20"
        android:layout_marginRight="@dimen/size20"
        android:layout_marginTop="@dimen/size32"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginRight="@dimen/size10"
            android:padding="@dimen/size10"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/height50"
                android:layout_height="@dimen/height50"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/boy"/>

            <in.fine.artist.home.utils.views.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/boy"
                android:paddingTop="@dimen/size10"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/size10"
            android:padding="@dimen/size10"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/height50"
                android:layout_height="@dimen/height50"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/girl"/>

            <in.fine.artist.home.utils.views.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/girl"
                android:paddingTop="@dimen/size10"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/right_tick_container"
        android:layout_width="@dimen/height100"
        android:layout_height="@dimen/height100"
        android:layout_marginTop="@dimen/size32"
        layout="@layout/layout_right_arrow" />

</LinearLayout>